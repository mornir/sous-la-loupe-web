---
import { Icon } from 'astro-icon/components'
import { pages } from './NavLinks.astro'

const pathname = Astro.url.pathname
---

<header>
  <a href="/">
    <span class="sr-only">Retour Ã  la page de recherche</span>
    <Icon name="logo" class="text-8xl mb-6 mx-auto" />
  </a>
  <nav class="px-4 py-2">
    <ul class="flex flex-col lg:flex-row items-center justify-center gap-x-8">
      {
        [{ name: 'Recherche', slug: '/' }, ...pages].map((p) => (
          <li>
            <a
              href={p.slug}
              class={
                'text-accent hover:underline lg:text-lg xl:text-xl' +
                (pathname === p.slug ? ' text-primary hover:no-underline' : '')
              }
            >
              {p.name}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>
