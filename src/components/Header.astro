---
import { Icon } from 'astro-icon/components'
import { pages } from './NavLinks.astro'

const pathname = Astro.url.pathname
---

<header class="max-w-screen-md mx-auto">
  <a href="/">
    <span class="sr-only">Retour Ã  la page de recherche</span>
    <Icon name="logo" class="text-8xl mb-6 mx-auto" />
  </a>
  <nav class="px-4 py-2 sticky top-10 bg-white">
    <ul
      class="flex justify-between lg:justify-around flex-wrap max-w-lg mx-auto"
    >
      {
        [{ name: 'Recherche', slug: '/' }, ...pages].map((p) => (
          <li>
            <a
              href={p.slug}
              class={
                'text-accent hover:underline' +
                (pathname === p.slug ? ' text-primary hover:no-underline' : '')
              }
            >
              {p.name}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>
