---
import { Icon } from 'astro-icon/components'
import { pages } from './NavLinks.astro'
---

<header class="max-w-screen-md mx-auto sticky top-0">
  <a href="/">
    <span class="sr-only">Retour Ã  la page de recherche</span>
    <Icon name="logo" class="text-7xl mb-6 mx-auto" />
  </a>
  <nav class="bg-white p-4">
    <ul class="flex justify-center mt-6 gap-x-4">
      {
        [{ name: 'Recherche', slug: '/' }, ...pages].map((p) => (
          <li>
            <a href={p.slug} class=" text-accent hover:underline">
