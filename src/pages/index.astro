---
import Layout from '../layouts/Layout.astro'
import AlpineSearchBox from '@components/AlpineSearchBox.astro'
import WordCloud from '@components/word-cloud/WordCloud.astro'
import NavLinks from '@components/NavLinks.astro'
import { Icon } from 'astro-icon/components'
---

<Layout title="Recherche | sous la loupe">
  <div>
    <WordCloud />
  </div>
  <div
    class="absolute backdrop-blur-sm bg-white/80 px-8 py-10 w-full lg:w-[39rem] rounded-lg top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 flex flex-col items-center"
  >
    <Icon name="logo" class="text-9xl z-10 mb-6" />
    <AlpineSearchBox />
    <NavLinks />
  </div>
</Layout>

<style>
  body {
    overflow: hidden;
  }
</style>
